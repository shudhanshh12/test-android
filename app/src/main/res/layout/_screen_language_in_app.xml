                            app:srcCompat="@drawable/ic_check" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:id="@+id/tamilView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tamilText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="தமிழ்"
                            android:textAppearance="?textAppearanceBody2" />

                        <ImageView
                            android:id="@+id/tamilCheck"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:tint="?colorPrimary"
                            app:srcCompat="@drawable/ic_check" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:id="@+id/malayalamView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/malayalamText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="മലയാളം"
                            android:textAppearance="?textAppearanceBody2" />

                        <ImageView
                            android:id="@+id/malayalamCheck"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:tint="?colorPrimary"
                            app:srcCompat="@drawable/ic_check" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:id="@+id/kannadaView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/kannadaText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ಕನ್ನಡ"
                            android:textAppearance="?textAppearanceBody2" />

                        <ImageView
                            android:id="@+id/kannadaCheck"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:tint="?colorPrimary"
                            app:srcCompat="@drawable/ic_check" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:id="@+id/bengaliView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/bengaliText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="বাংলা"
                            android:textAppearance="?textAppearanceBody2" />

                        <ImageView
                            android:id="@+id/bengaliCheck"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:tint="?colorPrimary"
                            app:srcCompat="@drawable/ic_check" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/in_app_lang_desc"
                android:textAlignment="center"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="@color/grey800" />
        </LinearLayout>

    </ScrollView>

</in.okcredit.shared.performance.layout_perf.LinearLayoutTracker >
