<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/grey100"
        android:background="@color/grey100"
        android:layout_marginTop="60dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_whatsapp_green"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/whatsapp_page_title"
        android:layout_marginTop="50dp"
        android:textAppearance="?textAppearanceSubtitle1"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:text="OkCredit will send useful information about your OkCredit account registered with phone number on Whatsapp"
        android:layout_marginTop="5dp"
        android:textColor="@color/grey600"
        android:textAppearance="?textAppearanceBody1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?colorPrimaryAda"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_check"
                android:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/yes_please_send"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="12dp"
        android:text="@string/no_don_t_send"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/grey500"/>

</LinearLayout>
