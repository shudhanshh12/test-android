<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_border_on_top"
    android:paddingBottom="@dimen/grid_2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/grid_7"
        android:layout_height="@dimen/grid_7"
        android:layout_marginTop="@dimen/grid_3"
        android:background="@drawable/circular_red_lite_filled_background_no_stroke"
        android:padding="@dimen/grid_3_half"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_outline" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/grid_2"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/are_you_sure"
        android:textAppearance="?textAppearanceSubtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:text="Are you sure?" />

    <TextView
        android:id="@+id/tvDeleteInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="@dimen/grid_2"
        android:gravity="center"
        android:text="@string/if_you_delete_account"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <View
        android:id="@+id/divider"
        android:layout_width="407dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/grid_3"
        android:background="@color/grey50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDeleteInfo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/grid_6"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_3_half"
        android:layout_marginEnd="@dimen/grid_1"
        android:background="@drawable/circle_stroke_grey_1dp"
        android:gravity="center"
        android:paddingStart="21dp"
        android:paddingEnd="21dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textAppearance="?textAppearanceButton"
        android:textColor="@color/grey900"
        app:cornerRadius="@dimen/grid_3"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="@dimen/grid_6"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_3_half"
        android:layout_marginEnd="@dimen/grid_1"
        android:background="@drawable/circle_background_red_primary"
        android:gravity="center"
        android:paddingStart="21dp"
        android:paddingEnd="21dp"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textAppearance="?textAppearanceButton"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/grid_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
