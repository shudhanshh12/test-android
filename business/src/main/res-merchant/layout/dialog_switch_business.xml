<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:theme="@style/Base.OKCTheme">

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/business_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_max="480dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/create_new_business"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_new_business"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:gravity="start|center"
        android:text="@string/t_001_multi_acc_cta_new_biz"
        android:textAppearance="?textAppearanceSubtitle3"
        android:textColor="@color/grey900"
        app:icon="@drawable/ic_add"
        app:iconGravity="start"
        app:iconPadding="16dp"
        app:iconSize="@dimen/_24dp"
        app:iconTint="@color/grey900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>