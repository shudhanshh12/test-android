<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:visibility="visible"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <ImageView
        android:id="@+id/info_img_v1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        app:layout_constraintHeight_percent="0.5"
        android:visibility="visible"
        android:src="@drawable/ic_expense_info_graphic"
        app:layout_constraintTop_toBottomOf="@+id/youtube_thumbnail"
        app:layout_constraintBottom_toTopOf="@+id/info_description"/>

    <TextView
        android:id="@+id/info_description_v1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_img_v1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_16dp"
        android:gravity="center"
        android:text="@string/expense_info_description"
        android:textAppearance="?textAppearanceSubtitle3"/>

</merge>
