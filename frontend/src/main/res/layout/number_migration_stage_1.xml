<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/old_number_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toStartOf="@+id/forward_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/number_change_pic_1" />

    <TextView
        android:id="@+id/old_number_tv"
        android:textAppearance="?textAppearanceSubtitle2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/old_number"
        app:layout_constraintEnd_toEndOf="@+id/old_number_pic"
        app:layout_constraintStart_toStartOf="@+id/old_number_pic"
        app:layout_constraintTop_toBottomOf="@+id/old_number_pic"
        tool:text="lkdckmsdcksdckmksc jnc nj cbn bdcnbsdjchb" />

    <TextView
        android:id="@+id/new_number_tv"
        android:textAppearance="?textAppearanceSubtitle2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/new_number_caps"
        app:layout_constraintEnd_toEndOf="@+id/new_number_pic"
        app:layout_constraintStart_toStartOf="@+id/new_number_pic"
        app:layout_constraintTop_toBottomOf="@+id/new_number_pic"
        tool:text="lkdckmsdcksdckmksc jnc nj cbn bdcnbsdjchb" />

    <ImageView
        android:id="@+id/new_number_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/forward_arrow"
        app:layout_constraintStart_toEndOf="@+id/forward_arrow"
        app:layout_constraintTop_toTopOf="@+id/forward_arrow"
        app:srcCompat="@drawable/number_change_pic_1" />

    <ImageView
        android:id="@+id/forward_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/old_number_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward" />

</androidx.constraintlayout.widget.ConstraintLayout>
