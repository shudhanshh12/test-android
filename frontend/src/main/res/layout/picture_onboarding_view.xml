<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivOnboardingIcon"
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/ic_link_pay_onboarding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOnboardingIcon"
        android:layout_marginStart="@dimen/grid_5_half"
        android:layout_marginTop="@dimen/grid_3"
        android:layout_marginEnd="@dimen/grid_5_half"
        android:gravity="center"
        android:text="@string/send_payment_link_with_ease"
        android:textAppearance="?textAppearanceSubtitle2" />

</RelativeLayout>
