<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/grid_2"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="@dimen/grid_2"
    android:orientation="vertical"
    android:paddingTop="2dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/grey300"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_6"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="7dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="7dp">

                    <ImageView
                        android:id="@+id/iv_arrow_icon"
                        android:layout_width="@dimen/grid_3_half"
                        android:layout_height="@dimen/grid_3_half"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/grid_3_half"
                        android:rotation="45"
                        app:srcCompat="@drawable/ic_arrow_down" />

                    <TextView
                        android:id="@+id/tx_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/grid_1"
                        android:layout_toEndOf="@+id/iv_arrow_icon"
                        android:textAppearance="?textAppearanceHeadline4"
                        tool:text="â‚¹200" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tx_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textAppearance="?textAppearanceCaption2"
                            android:textColor="@color/grey600"
                            tool:text="576577" />

                        <ImageView
                            android:id="@+id/sync"
                            android:layout_width="@dimen/grid_2"
                            android:layout_height="@dimen/grid_2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/grid_1_half"
                            android:tint="@color/grey600"
                            app:srcCompat="@drawable/ic_single_tick" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tx_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:textAppearance="?textAppearanceCaption2"
                tool:text="ssds sdsdsd sdsd sds sd sdsd sd sdsd sdsd"
                tool:visibility="visible" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
