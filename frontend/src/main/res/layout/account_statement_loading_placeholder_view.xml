<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tool:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_16dp"
        android:orientation="vertical">

        <View
            android:id="@+id/view1"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            tool:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_8dp"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view2"
            tool:layout_constraintTop_toBottomOf="@id/view1"
            tool:layout_constraintStart_toStartOf="parent"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view2"
            tool:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view4"
            tool:layout_constraintTop_toBottomOf="@id/view3"
            android:layout_width="200dp"
            android:layout_height="40dp"
            tool:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view5"
            tool:layout_constraintTop_toBottomOf="@id/view4"
            tool:layout_constraintStart_toStartOf="parent"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view6"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape"
            tool:layout_constraintTop_toBottomOf="@id/view5"
            tool:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view7"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view6"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view8"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view7"
            tool:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view9"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view8"
            tool:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape" />


        <View
            android:id="@+id/view10"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view9"
            tool:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view11"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view10"
            tool:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view12"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view11"
            tool:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape" />

        <View
            android:id="@+id/view13"
            android:layout_width="206dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            tool:layout_constraintTop_toBottomOf="@id/view12"
            tool:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape"
            tools:layout_editor_absoluteY="3dp" />

        <View
            android:id="@+id/view14"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintTop_toBottomOf="@id/view13"
            tool:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
