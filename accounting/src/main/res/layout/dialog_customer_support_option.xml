<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_border_on_top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/t_002_24X7help_helpbox_choice_label"
            android:textAppearance="@style/OKC.TextAppearance.Headline6"
            android:textColor="@color/grey900"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/t_002_24X7help_helpbox_choice_label" />

        <View
            android:id="@+id/viewTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_1"
            android:background="@color/grey300"
            app:layout_constraintTop_toBottomOf="@id/textContactUs" />


        <TextView
            android:id="@+id/textCall"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="start|center"
            android:text="@string/t_002_24X7help_helpbox_choice_label_op1"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:textAppearance="@style/OKC.TextAppearance.Body1"
            android:textColor="@color/grey900"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTop"
            app:drawableStartCompat="@drawable/ic_call"
            app:drawableTint="@color/grey900" />

        <View
            android:id="@+id/viewMiddle"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toBottomOf="@id/textCall" />


        <TextView
            android:id="@+id/textWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="start|center"
            android:text="@string/t_002_24X7help_helpbox_choice_label_op2"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:textAppearance="@style/OKC.TextAppearance.Body1"
            android:textColor="@color/grey900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewMiddle"
            app:drawableStartCompat="@drawable/ic_whatsapp"
            app:drawableTint="@color/grey900" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
