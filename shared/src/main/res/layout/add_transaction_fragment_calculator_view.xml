<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    tool:ignore="RtlHardcoded"
    tool:layout_height="wrap_content"
    tool:layout_width="match_parent"
    tool:parentTag="android.widget.FrameLayout">

    <!-- NOTE: Do not change text size from dp to sp, it will cause bug when font size is changed from device-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey300">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_one"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="1"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_two"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="2"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_three"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:text="3"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <ImageView
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/backspace_outline"
            app:tint="@color/grey900" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_four"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="4"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_five"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="5"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_six"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="6"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <ImageView
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_close_black_24dp"
            app:tint="@color/grey900" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_seven"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="7"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_eight"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="8"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_nine"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="9"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_minus"
            app:tint="@color/grey900" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dot"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="."
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zero"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="0"
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_equal"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="="
            android:textAppearance="?textAppearanceButton"
            android:textColor="@color/grey800"
            android:textSize="24dp"
            app:rippleColor="@color/grey500"
            tool:ignore="SpUsage" />

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_add"
            app:tint="@color/grey900" />

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btn_one,btn_two,btn_three,btn_backspace,btn_four,btn_five,btn_six,btn_multiply,btn_seven,btn_eight,btn_nine,btn_minus,btn_dot,btn_zero,btn_equal,btn_plus"
            app:flow_horizontalStyle="packed"
            app:flow_maxElementsWrap="4"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_plus_highlight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.7"
            android:background="@drawable/bg_circle_orange_with_border"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/btn_plus"
            app:layout_constraintTop_toTopOf="@id/btn_plus" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
