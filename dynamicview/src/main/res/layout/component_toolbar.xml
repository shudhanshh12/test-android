<?xml version="1.0" encoding="utf-8"?>
<!--Parent layout is required for bigger ripple effect-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/toolbar_component_size"
    android:layout_height="@dimen/toolbar_component_size"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/toolbar_component_icon_size"
        android:layout_height="@dimen/toolbar_component_icon_size"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars" />
</FrameLayout>
