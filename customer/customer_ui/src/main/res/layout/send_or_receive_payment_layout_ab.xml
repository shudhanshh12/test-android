<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/_16dp"
    android:visibility="gone"
    tools:visibility="visible">

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_payment_btn_ab"
        android:layout_width="wrap_content"
        android:minWidth="132dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/_16dp"
        android:paddingBottom="12dp"
        android:stateListAnimator="@null"
        android:text="@string/ce_relation_scrn_cta_take"
        android:textAppearance="?textAppearanceSubtitle4"
        android:textColor="?colorPrimary"
        app:backgroundTint="@color/green_lite"
        app:cornerRadius="24dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_payment_down_arrow"
        app:iconGravity="textStart"
        app:iconTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voice_fab_ab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/green_lite"
        app:strokeColor="@color/old_green_lite_1"
        app:strokeWidth="1dp" />


    <ImageView
        android:id="@+id/voice_fab_ab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle_background_grey100_outline"
        android:padding="10dp"
        android:visibility="gone"
        android:src="@drawable/ic_voice_icon"
        app:tint="@color/indigo_primary"
        app:layout_constraintBottom_toBottomOf="@+id/add_payment_btn_ab"
        app:layout_constraintEnd_toStartOf="@+id/add_credit_btn_ab"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_payment_btn_ab"
        app:layout_constraintTop_toTopOf="@+id/add_payment_btn_ab"
        app:rippleColor="@color/indigo_lite" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_credit_btn_ab"
        android:layout_width="wrap_content"
        android:minWidth="132dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="0dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/_16dp"
        android:paddingBottom="12dp"
        android:stateListAnimator="@null"
        android:text="@string/ce_relation_scrn_cta_give"
        android:textAppearance="?textAppearanceSubtitle4"
        android:textColor="@color/red_primary"
        app:backgroundTint="@color/red_lite"
        app:cornerRadius="24dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_credit_up"
        app:iconGravity="textStart"
        app:iconTint="@color/red_primary"
        app:layout_constraintBottom_toBottomOf="@+id/voice_fab_ab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/voice_fab_ab"
        app:layout_constraintTop_toTopOf="@+id/voice_fab_ab"
        app:rippleColor="@color/red_lite"
        app:strokeColor="@color/red_lite_1"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
