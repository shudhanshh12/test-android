<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/grey50"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_payment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:elevation="0dp"
        android:minWidth="140dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/_16dp"
        android:paddingBottom="12dp"
        android:stateListAnimator="@null"
        android:text="@string/payment"
        android:textAppearance="?textAppearanceSubtitle4"
        android:textColor="?colorPrimary"
        android:textSize="14sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="24dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_payment_down_arrow"
        app:iconGravity="textStart"
        app:iconTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_credit_btn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/green_lite"
        app:strokeColor="@color/grey400"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_credit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:minWidth="140dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/_16dp"
        android:paddingBottom="12dp"
        android:stateListAnimator="@null"
        android:text="@string/credit"
        android:textAppearance="?textAppearanceSubtitle4"
        android:textColor="@color/red_primary"
        android:textSize="14sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="24dp"
        app:elevation="0dp"
        app:icon="@drawable/ic_credit_up"
        app:iconGravity="textStart"
        app:iconTint="@color/red_primary"
        app:layout_constraintBottom_toBottomOf="@+id/add_payment_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_payment_btn"
        app:layout_constraintTop_toTopOf="@+id/add_payment_btn"
        app:rippleColor="@color/red_lite"
        app:strokeColor="@color/grey400"
        app:strokeWidth="1dp" />

    <View
        android:layout_width="@dimen/view_0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@color/grey100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
