<?xml version="1.0" encoding="utf-8"?>
<in.okcredit.shared.performance.layout_perf.RelativeLayoutTracker xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutName="Transaction Fragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/LightActionBarTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="?attr/homeAsUpIndicator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/screen_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/payment_details"
                        android:textAppearance="?textAppearanceHeadline6"
                        android:textColor="@color/grey800" />

                </LinearLayout>

                <tech.okcredit.help.contextual_help.ContextualHelpMenuView
                    android:id="@+id/contextual_help"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|end" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rlAddedAmount"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/amount_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/materialTextCashback"
                    app:layout_constraintEnd_toStartOf="@id/edit_transaction_amount"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed">

                    <TextView
                        android:id="@+id/rupee_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/spacing_6"
                        android:text="@string/rupee_symbol"
                        android:textColor="@color/tx_credit"
                        android:textSize="@dimen/spacing_24"
                        tool:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceHeadline2"
                        android:textColor="@color/tx_credit"
                        tool:text="545"
                        tool:visibility="visible" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextCashback"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/kyc_pending_background"
                    android:drawableStart="@drawable/ic_confetti"
                    android:drawablePadding="10dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="30dp"
                    tool:text="@string/SU2_Cashback_Discovery_body_2"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.OKCTheme.Caption2"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amount_container"
                    tool:visibility="visible" />

                <ImageView
                    android:id="@+id/edit_transaction_amount"
                    android:layout_width="@dimen/grid_4"
                    android:layout_height="@dimen/grid_4"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/grid_1"
                    android:background="@drawable/circular_green_lite_filled_background_no_stroke"
                    android:padding="@dimen/grid_1"
                    app:layout_constraintBottom_toBottomOf="@id/amount_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/amount_container"
                    app:layout_constraintTop_toTopOf="@id/amount_container"
                    app:srcCompat="@drawable/ic_due_edit"
                    tool:visibility="visible" />


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_collection_highlighter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignTop="@+id/edit_transaction_amount"
                    android:layout_marginStart="20dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/edit_transaction_amount"
                    app:layout_constraintTop_toTopOf="@id/edit_transaction_amount"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/dot_highlighter"
                    tool:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/bill_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@string/bills"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:textColor="?colorPrimary" />

                <com.airbnb.epoxy.EpoxyRecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/note_super_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/notes"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:textColor="?colorPrimary" />

                <LinearLayout
                    android:id="@+id/note_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/note_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:srcCompat="@drawable/ic_txn_note"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:clickable="false"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/add_note"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="@dimen/_16dp"
                        android:paddingBottom="8dp"
                        android:textAppearance="?textAppearanceBody1"
                        android:textColor="@color/grey900"
                        android:textColorHint="@color/grey400" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/online_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/grid_1"
                android:visibility="gone"
                tool:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/online_payment_transaction"
                    android:textAllCaps="true"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:textColor="?colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_txn_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_collection_icon"
                            app:tint="@color/grey900" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="@dimen/_16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="@string/transaction_id"
                                android:textAppearance="?textAppearanceCaption2"
                                android:textColor="@color/grey700" />

                            <TextView
                                android:id="@+id/txn_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textAppearance="?textAppearanceSubtitle2"
                                android:textColor="@color/grey700"
                                tool:text="ASDFGHJKL" />


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerView"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:background="@color/divider" />


                    <LinearLayout
                        android:id="@+id/ll_txn_to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_account_balance_bank"
                            app:tint="@color/grey900" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="@dimen/_16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="@string/to"
                                android:textAllCaps="true"
                                android:textAppearance="?textAppearanceCaption2"
                                android:textColor="@color/grey700" />

                            <TextView
                                android:id="@+id/upi_id_to_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textAppearance="?textAppearanceSubtitle2"
                                android:textColor="@color/grey700"
                                tool:text="To upiid@okicici" />


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/payment_status_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:id="@+id/ll_payment_failed_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_error" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="@dimen/_16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_payment_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="@string/payment_failed"
                                android:textAllCaps="false"
                                android:textAppearance="?textAppearanceCaption2"
                                android:textColor="@color/grey700" />

                            <TextView
                                android:id="@+id/tv_payment_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textAppearance="?textAppearanceSubtitle2"
                                android:textColor="@color/grey700"
                                tool:text="10 Jan 2020, 09:30 PM" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/subscription_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    tool:visibility="visible">

                    <ImageView
                        android:id="@+id/subscription_left_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_icon_repeat"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/subscription_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:text="@string/subscription"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700" />

                    <TextView
                        android:id="@+id/subscription_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_arrow_right_grey500"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textAppearance="@style/OKC.TextAppearance.Subtitle2"
                        tool:text="@string/subscription" />

                </LinearLayout>

                <View
                    android:id="@+id/subscription_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@color/divider"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/added_by_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/added_by_left_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_sync_ok"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/added_by_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700"
                        tool:text="Added by/ Deleted by" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sync_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/sync_left_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_sync_ok"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/syc_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_weight="1"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700"
                        tool:text="Sync Successful" />

                    <ProgressBar
                        android:id="@+id/pbSyncNow"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        tool:visibility="visible" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/sms_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/sms_left_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_sms"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/sms_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/_16dp"
                        android:layout_weight="1"
                        android:text="@string/sms_delivered"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700" />

                </LinearLayout>

                <View
                    android:id="@+id/sms_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@color/divider"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llAddedOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_date"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/created_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700" />

                </LinearLayout>

                <View
                    android:id="@+id/delete_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@color/divider"
                    tool:visibility="gone" />


                <LinearLayout
                    android:id="@+id/delete_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    tool:visibility="visible">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_delete"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/deleted_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="@string/deleted_on"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700" />

                </LinearLayout>

                <View
                    android:id="@+id/note_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@color/divider" />


                <LinearLayout
                    android:id="@+id/date_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_calendar"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/grey700" />

                </LinearLayout>

                <View
                    android:id="@+id/edited_on_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:id="@+id/edited_on_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_edit_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_edit"
                        app:tint="@color/grey900" />

                    <TextView
                        android:id="@+id/edited_on_date"
                        android:layout_width="match_parent"
