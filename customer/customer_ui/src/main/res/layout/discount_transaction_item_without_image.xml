<in.okcredit.shared.performance.layout_perf.LinearLayoutTracker xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layoutName="Discount Transaction Recycler View"
    app:isRecycler="true"
    android:layout_gravity="start"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="@dimen/spacing_chat_view_item"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    android:paddingTop="2dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/grey200"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey100"
                android:paddingStart="10dp">

                <ImageView
                    android:id="@+id/delete_discount_view"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_do_not_disturb" />

                <TextView
                    android:id="@+id/tx_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="4dp"
                    android:textAppearance="?textAppearanceSubtitle4"
                    android:textColor="@color/grey700"
                    android:visibility="gone"
                    tool:text="@string/online_payment"
                    tool:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/discount_layout_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="7dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="7dp"
                    android:paddingRight="12dp">

                    <ImageView
                        android:id="@+id/ic_delete_icon_ab"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_delete_outline"
                        android:tint="@color/grey600"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tx_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="24dp"
                        android:text="₹500"
                        android:textAppearance="?textAppearanceHeadline5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tx_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textAppearance="?textAppearanceCaption2"
                            android:textColor="@color/grey600" />

                        <ImageView
                            android:id="@+id/sync"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:tint="@color/grey600"
                            app:srcCompat="@drawable/ic_sync_ok" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/discount_layout_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="7dp"
                android:visibility="gone"
                tool:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="7dp"
                    android:paddingRight="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_delete_outline"
                        android:tint="@color/grey600"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="9dp"
                        android:text="@string/deleted_italic"
                        android:textAppearance="?textAppearanceOverline"
                        android:textColor="@color/grey500"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tx_amount_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="24dp"
                        android:text="₹500"
                        android:textColor="@color/grey500"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/sync_b"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:tint="@color/grey600"
                            app:srcCompat="@drawable/ic_sync_ok" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/tx_bill_image_container"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/tx_bill_image"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="240dp"
                    android:scaleType="centerCrop"
                    tool:src="@drawable/placeholder_image" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_count_container"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_8dp"
                    app:cardBackgroundColor="@color/black_60"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/image_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAppearance="?textAppearanceSubtitle3"
                        android:textColor="@color/white"
                        tool:text="+1" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/tx_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:textAppearance="?textAppearanceCaption2"
                android:visibility="gone"
                tool:text="ssds sdsdsd sdsd sds sd sdsd sd sdsd sdsd"
                tool:visibility="visible" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tx_bill"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/grey700"
            app:srcCompat="@drawable/ic_camera_56" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="?textAppearanceCaption1"
            android:textColor="@color/grey700"
            tool:text="₹500 Due" />

    </LinearLayout>

</in.okcredit.shared.performance.layout_perf.LinearLayoutTracker>
